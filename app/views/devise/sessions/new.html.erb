
  <div class="login-banner"><%= image_tag "sign_in/run", alt: "Le Wagon", width: 375 %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-4">
          <h2>Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
              <%= f.input :password, required: false, placeholder: "••••••" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="login-btn-links">
              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-primary" %>
              </div>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div> 
  </div>

