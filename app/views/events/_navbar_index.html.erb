<div class="navbar-index">
  <% if current_user.nil? %>
  <%= image_tag "avatar/default.png", class:"navbar-avatar" %>
  <% else %>
    <%= cl_image_tag current_user.photo.key, height: 400, width: 400, crop: :crop, gravity: :face, class:"navbar-avatar" %>
  <% end %>
  <div class="navbar-form-index">
    <%= form_tag events_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find an event/T-Mate"  %>
      <% end %>
  </div>
  <%= image_tag("icons/filter") %>
</div>
