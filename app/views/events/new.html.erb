<div class="create-main-container">
  <h2>Create Your Event</h2>
  <%= simple_form_for @event do |f| %>

    <h6><strong>Select a Category :</strong></h6>

<%= f.collection_radio_buttons( :category_id, @categories, :id, :logo_link,
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'category-wrapper',
            item_wrapper_class: 'category-item',
            input_html: {class: 'category-selector'} ) do |category|
            category.label { category.radio_button + "<i class='fas #{category.text}'></i>".html_safe }
            end %>

    <h6><strong>Event Title:</strong></h6>
      <%= f.input :title, label: false%>

    <h6><strong>Event Description:</strong></h6>
      <%= f.input :content, label: false%>

    <h6><strong>Event Location:</strong></h6>
      <%= f.input :address, label: false, id: "flat_address", class: "algolia-form" %>

    <h6><strong>Max Number of Participants:</strong></h6>
      <%= f.input :participants_maximum, label: false%>

    <h6><strong>Event Starts:</strong></h6>
      <%= f.input :start_time, as: :datetime, html5: true, label: false%>

    <h6><strong>Event Ends: </strong></h6>
      <%= f.input :end_time, as: :datetime, html5: true, label: false%>

    <div class="submit-button mb-4">
      <%= f.submit "Create Event!", class: 'btn-submit-event' %>
    </div>
  <% end %>

</div>
