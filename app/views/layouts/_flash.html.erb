<% if flash %>
  <% flash.each do |type, msg|%>
    <div class="alert alert-success alert-dismissible fade show flash-custom">
    <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    </div>
  <% end %>
<% end %>