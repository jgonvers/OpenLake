<div class="card-user-tmate d-flex justify-content-start align-items-center">
  <%= link_to user_path(user), class: "m-2" do %>
    <%= cl_image_tag user.photo.key, height: 400, width: 400, crop: :crop, gravity: :face, class:"avatar-card-user" %>
  <% end %>
  <div class="d-flex flex-column justify-content-center align-items-start">
    <p><strong><%= "#{user.first_name} #{user.last_name}" %></strong> wants to be your teammate</h3>
    <div class="d-flex justify-content-around">
      <%= link_to "Accept", accepted_teammate_path(user), method: :post, remote: true, class: "btn-pending accepted" %>
      <%= link_to "Refuse", destroy_teammate_path(user), method: :delete, remote: true, class: "btn-pending refused" %>
    </div>
  </div>
</div>
